        document.addEventListener("DOMContentLoaded", function () {
            // Initialize Lucide icons
            lucide.createIcons();

            // Sidebar functionality
            const menuBtn = document.getElementById("menu-btn");
            const sidebar = document.querySelector(".sidebar");
            const body = document.body;

            // Show sidebar by default
            sidebar.classList.add("open");
            body.classList.add("sidebar-open");

            // Toggle sidebar
            menuBtn.addEventListener("click", function () {
                sidebar.classList.toggle("closed");
                body.classList.toggle("sidebar-open");
            });

            // Volume slider toggle
            document.getElementById('volume-btn').addEventListener('click', () => {
                const slider = document.getElementById('volume-slider');
                slider.style.display = slider.style.display === 'block' ? 'none' : 'block';
            });

            // Search functionality
            const searchForm = document.getElementById('search-form');
            const searchInput = document.getElementById('search-input');
            const searchResults = document.getElementById('search-results');
            const playlistSelect = document.getElementById('playlist-select');

            searchForm.addEventListener('submit', handleSearch);
            searchInput.addEventListener('input', handleSearch);

            async function handleSearch(event) {
                event.preventDefault();
                const query = searchInput.value.trim();

                if (query.length === 0) {
                    searchResults.innerHTML = '';
                    return;
                }

                try {
                    const response = await fetch(`/search?query=${encodeURIComponent(query)}`);
                    const songs = await response.json();

                    // Clear previous results
                    searchResults.innerHTML = '';

                    // Display new results
                    songs.forEach(song => {
                        const songCard = document.createElement('div');
                        songCard.className = 'song-card';
                        songCard.innerHTML = `
                            <img src="${song.image}" alt="${song.title}">
                            <h4>${song.title}</h4>
                            <p>${song.artist}</p>
                            <button class="add-button" onclick="addToPlaylist('${song.title}')">Add to Playlist</button>
                        `;
                        searchResults.appendChild(songCard);
                    });

                    // Show message if no results found
                    if (songs.length === 0) {
                        searchResults.innerHTML = '<div style="text-align: center; color: #b3b3b3; padding: 20px;">No songs found. Try a different search term.</div>';
                    }
                } catch (error) {
                    console.error('Error searching:', error);
                    searchResults.innerHTML = '<div style="text-align: center; color: #b3b3b3; padding: 20px;">Error searching songs. Please try again.</div>';
                }
            }

            function redirectTo(page) {
                window.location.href = `/${page}`;
            }
        });
